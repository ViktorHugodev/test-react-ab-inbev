@baseUrl = http://localhost:5000
@token = eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

###
# @name login
# Realiza login e obtém token JWT
POST {{baseUrl}}/api/Auth/login
Content-Type: application/json

{
  "email": "admin@companymanager.com",
  "password": "Admin@123"
}

###
# Obtém informações do usuário atual
GET {{baseUrl}}/api/Auth/me
Authorization: Bearer {{token}}

###
# @name getAllEmployees
# Obtém todos os funcionários
GET {{baseUrl}}/api/Employees
Authorization: Bearer {{token}}

###
# Obtém funcionários com paginação e filtros
GET {{baseUrl}}/api/Employees/paged?pageNumber=1&pageSize=10&searchTerm=&department=TI&managerId=
Authorization: Bearer {{token}}

###
# Obtém um funcionário pelo ID
GET {{baseUrl}}/api/Employees/3fa85f64-5717-4562-b3fc-2c963f66afa6
Authorization: Bearer {{token}}

###
# Obtém funcionários por departamento
GET {{baseUrl}}/api/Employees/department/TI
Authorization: Bearer {{token}}

###
# Obtém funcionários por gerente
GET {{baseUrl}}/api/Employees/manager/3fa85f64-5717-4562-b3fc-2c963f66afa6
Authorization: Bearer {{token}}

